{
  "name": "@opengsn/contracts",
  "license": "GPL-3.0-only",
  "version": "2.2.2",
  "main": "types/truffle-contracts/index.d.ts",
  "scripts": {
    "truffle-compile": "truffle compile --compile-all",
    "typechain-generate": "yarn truffle-compile && typechain --target truffle-v5 '../cli/src/compiled/*.json'",
    "lint": "solhint -f unix \"src/**/*.sol\" --max-warnings 0",
    "tsc-watch": "chokidar \"src/**/*.sol\" -c \"yarn run typechain-generate\""
  },
  "files": [
    "src/*",
    "types/*",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@eth-optimism/core-utils": "^0.5.3",
    "@eth-optimism/plugins": "^1.0.0-alpha.3",
    "@eth-optimism/solc": "^0.7.6-alpha.1",
    "@openzeppelin/contracts": "^3.4.0-solc-0.7",
    "add": "^2.0.6",
    "chokidar-cli": "^3.0.0",
    "yarn": "^1.22.11"
  },
  "devDependencies": {
    "solhint": "^3.3.2"
  },
  "peerDependencies": {
    "@types/bn.js": "^5.1.0",
    "bn.js": "^5.2.0",
    "web3": "^1.2.6",
    "web3-core": "^1.2.6",
    "web3-eth-contract": "^1.2.6",
    "web3-utils": "^1.2.6"
  }
}
